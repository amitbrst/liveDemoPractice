<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!--     White background-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- White background color -->
            <corners android:radius="5dp" /> <!-- Border corner radius -->
        </shape>
    </item>

    <!-- Gray border -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/gray_300" android:width="1dp" /> <!-- Gray border color and width -->
            <corners android:radius="5dp" /> <!-- Border corner radius -->
        </shape>
    </item>

    <!-- Shadow and elevation -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- White background color -->
            <corners android:radius="5dp" /> <!-- Border corner radius -->
            <padding android:left="5dp" android:right="5dp" android:top="2dp" android:bottom="2dp" />
        </shape>
    </item>
</layer-list>
